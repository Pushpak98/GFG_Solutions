for _ in range(int(input())):
    m,n=input().split()
    a=list(map(int,input().split()))
    flag=0
    conf=0
    for i in range(len(a)):
        if a[i]<=int(n):
            conf=i
            flag=1
            
    if flag==1:
        print(conf)
    else:
        print('-1')
        
        
